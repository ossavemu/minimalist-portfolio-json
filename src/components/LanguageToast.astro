---
import type { Language } from '@/constants';

// Get current language from Astro's i18n
const currentLang = (Astro.currentLocale || 'en') as Language;

const toastMessages = {
  en: {
    message: 'Click the globe icon to switch language',
    icon: 'üåê',
  },
  es: {
    message: 'Haz clic en el icono del globo para cambiar idioma',
    icon: 'üåê',
  },
};

const toast = toastMessages[currentLang];
---

<div id="language-toast" class="language-toast hidden">
  <span class="toast-icon">{toast.icon}</span>
  <span class="toast-message">{toast.message}</span>
</div>

<script>
  function showLanguageToast() {
    const toast = document.getElementById('language-toast');
    if (!toast) return;

    // Show toast
    toast.classList.remove('hidden');
    toast.classList.add('visible');

    // Hide after 4 seconds
    setTimeout(() => {
      toast.classList.remove('visible');
      toast.classList.add('hidden');
    }, 4000);

    // Mark as shown in localStorage to avoid showing again
    localStorage.setItem('languageToastShown', 'true');
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Only show if not previously shown
    const hasBeenShown = localStorage.getItem('languageToastShown');
    if (!hasBeenShown) {
      // Show after a slight delay
      setTimeout(showLanguageToast, 2000);
    }
  });
</script>

<style>
  .language-toast {
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 9999;

    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    max-width: 280px;

    /* Liquid Glass Effect */
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.8);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.5),
      0 0 0 1px rgba(0, 0, 0, 0.1);

    /* Smooth animation */
    opacity: 0;
    transform: translateX(-100%) translateY(-10px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);

    /* Typography */
    color: #1f2937;
    font-weight: 500;
    font-size: 0.8rem;
    line-height: 1.4;

    /* Subtle glow effect */
    position: relative;
  }

  .language-toast::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: inherit;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.4),
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.4)
    );
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .language-toast.visible {
    opacity: 1;
    transform: translateX(0) translateY(0);
  }

  .language-toast.visible::before {
    opacity: 1;
  }

  .language-toast.hidden {
    opacity: 0;
    transform: translateX(-100%) translateY(-10px);
    pointer-events: none;
  }

  .toast-icon {
    font-size: 1rem;
    opacity: 0.8;
    flex-shrink: 0;
  }

  .toast-message {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      sans-serif;
    letter-spacing: -0.01em;
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .language-toast {
      top: 0.75rem;
      left: 0.75rem;
      right: 0.75rem;
      max-width: none;
      padding: 0.625rem 0.875rem;
      font-size: 0.75rem;
    }
  }

  /* Hover effect for interactive feel */
  .language-toast:hover {
    transform: translateY(-2px);
    box-shadow:
      0 12px 40px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.6),
      0 0 0 1px rgba(255, 255, 255, 0.2);
  }
</style>
